generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgres"
  url      = env("MOBILE_DB_URL")
}

model table {
  tableNumber        Int                  @id
  activeTableCommand activeTableCommand[]
}

model command {
  commandNumber      Int                 @id
  activeTableCommand activeTableCommand?
  client             client?
}

model activeTableCommand {
  commandNumber Int @id
  tableNumber   Int

  table   table   @relation(fields: [tableNumber], references: [tableNumber])
  command command @relation(fields: [commandNumber], references: [commandNumber])
}

model client {
  clientId Int     @id @default(autoincrement())
  name     String
  command  command @relation(fields: [clientId], references: [commandNumber])
}

model product {
  productId Int    @id @default(autoincrement())
  name      String
  category  String
  price     Float
}
