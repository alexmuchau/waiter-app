generator client {
  provider      = "prisma-client-js"
  output        = "./generated"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgres"
  url      = env("MOBILE_DB_URL")
}

model table {
  tableNumber      Int       @id
  tableDescription String
  command          command[]
}

model command {
  commandNumber Int     @id
  tableNumber   Int?
  table         table?  @relation(fields: [tableNumber], references: [tableNumber])
  client        client?
}

model client {
  clientId Int     @id @default(autoincrement())
  name     String
  command  command @relation(fields: [clientId], references: [commandNumber])
}

model product {
  productId Int      @id @default(autoincrement())
  name      String
  category  Category
  price     Float
}

enum Category {
  CHOPP
  FOOD
}

model waiter {
  waiterId Int    @id @default(autoincrement())
  username String
  password String
  name     String
}